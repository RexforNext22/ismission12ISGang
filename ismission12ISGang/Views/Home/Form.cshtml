@{
}


@model Person


<h2>Reserve your time slot:</h2>


<h5>@ViewBag.singleTime.Month @ViewBag.singleTime.Day, @ViewBag.singleTime.Year @ViewBag.singleTime.TimeOfDay</h5>


<form method="post">
    <!-- Throw error message if invalid entries made -->
    <div asp-validation-summary="All"></div>

    <!-- Basic form -->
    <div class="form-group">

        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />

        <label asp-for="Size">Group Size (enter as a number)</label>
        <input asp-for="Size" class="form-control" />

        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />

        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />


    </div>

    <!-- submission button -->
    <button type="submit" class="btn btn-sm btn-primary" asp-route-id="@ViewBag.singleTime.TimeID">Save Reservation</button>

</form>